{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "charset": "utf-8",
    "incremental": true,
    "lib": ["es2018", "dom"],
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["server", "sequelize", "bluebird"],
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true
  }
}
