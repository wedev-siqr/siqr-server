{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "charset": "utf-8",
    "incremental": true,
    "lib": ["es2018", "dom"],
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "server", "sequelize", "bluebird", "validator"],
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "paths": {
      "@siqr/models": ["src/models/index.ts"],
      "@siqr/interfaces/*": ["src/interfaces/*"],
      "@siqr/controllers/*": ["src/controllers/*"],
      "@siqr/helpers/*": ["src/helpers/*"],
      "@siqr/utils/*": ["src/utils/*"]
    }
  }
}
